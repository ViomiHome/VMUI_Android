<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/viomi_green"
            android:gravity="center"
            android:text="#28beca / viomi green"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/price_red"
            android:gravity="center"
            android:text="#CE3333 / price red"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/title_gray"
            android:gravity="center"
            android:text="#2c2c2c / title gray"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/content_gray"
            android:gravity="center"
            android:text="#4c4c4c / content gray"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/content_gray_light"
            android:gravity="center"
            android:text="#666666 / content gray_light"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/tips_gray"
            android:gravity="center"
            android:text="#999999 / tips gray"
            android:textColor="@color/title_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/tips_gray_light"
            android:gravity="center"
            android:text="#b2b2b2 / tips gray_light"
            android:textColor="@color/title_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/smoke_gray"
            android:gravity="center"
            android:text="#c8c8c8 / smoke gray"
            android:textColor="@color/title_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/divider_gray"
            android:gravity="center"
            android:text="#eeeeee / divider gray"
            android:textColor="@color/title_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_gray"
            android:gravity="center"
            android:text="#f7f8f8 / bg gray"
            android:textColor="@color/title_gray" />
    </LinearLayout>
</ScrollView>