<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="236">

        <ImageView
            android:id="@+id/iv_emnty"
            android:layout_width="166dp"
            android:layout_height="166dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#FF71BBE6" />

        <com.viomi.vmui.VCircleProgress
            android:id="@+id/v_process"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="28dp"
            app:barColor="@color/viomi_green"
            app:barWidth="4dp"
            app:circleColor="@color/white"
            app:rimColor="@color/divider_gray"
            app:rimWidth="4dp"
            app:spinSpeed="3dp"
            app:text="0"
            app:textColor="@color/viomi_green"
            app:textSize="14sp"
            app:unitTextSize="14sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="367"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="56dp"
            android:layout_height="20dp"
            android:layout_marginBottom="3dp"
            android:text="标题文字"
            android:textColor="@color/title_gray"
            android:textSize="14sp" />

        <TextView
            android:layout_width="195dp"
            android:layout_height="18dp"
            android:text="这里显示的是辅助文字，颜色可改"
            android:textColor="@color/tips_gray"
            android:textSize="13sp" />

        <com.viomi.vmui.VButton
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:minWidth="102dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:button_style="green_stroke"
            app:text_content="操作描述" />
    </LinearLayout>
</LinearLayout>