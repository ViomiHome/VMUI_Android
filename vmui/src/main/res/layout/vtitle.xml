<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/v_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.viomi.vmui.VImageView
            android:id="@+id/iv_back"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:scaleType="centerInside"
            android:src="@mipmap/back_black"
            android:text="操作"
            android:textColor="@color/viomi_green"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.viomi.vmui.VTextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:textColor="@color/viomi_green"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.viomi.vmui.VTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:ellipsize="end"
            android:gravity="center"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#ff2c2c2c"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.viomi.vmui.VImageView
            android:id="@+id/iv_share"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_marginRight="14dp"
            android:scaleType="centerInside"
            android:src="@mipmap/share_black"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/layout_right"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/layout_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.viomi.vmui.VImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:minWidth="28dp"
                android:scaleType="centerInside"
                android:src="@mipmap/right_black"
                android:textColor="@color/viomi_green"
                android:textSize="15sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.viomi.vmui.VTextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:textColor="@color/viomi_green"
                android:textSize="15sp" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/v_sub"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/v_title" />

    <com.viomi.vmui.VTextView
        android:id="@+id/tv_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="100dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lines="1"
        android:singleLine="true"
        android:textColor="#ff666666"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>