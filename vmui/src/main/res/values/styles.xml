<resources>



    <style name="textview_14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textview_11">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="VMUI.Popup" parent="android:Theme.Dialog">
        <item name="android:backgroundDimAmount">?attr/dialog_background_dim_amount</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="popup_title_style">@style/VMUI.Dialog.Title</item>
        <item name="popup_action_style">@style/VMUI.Popup.Action</item>
    </style>

    <style name="VMUI.ActionSheet" parent="android:Theme.Dialog">
        <item name="android:backgroundDimAmount">?attr/dialog_background_dim_amount</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item><!-- 为了避免在有 NavigationBar 的手机上 Dialog 从 NavigationBar 底部上来。去掉 Dialog 的动画，使用 View 的动画。-->
        <item name="android:layout_width">match_parent</item>

        <item name="sheet_title_style">@style/VMUI.ActionSheet.Title</item>
        <item name="dialog_action_container_style">@style/VMUI.Dialog.ActionContainer</item>
        <item name="dialog_action_style">@style/VMUI.Dialog.Action</item>
        <item name="sheet_action_style">@style/VMUI.ActionSheet.Action</item>
    </style>

    <style name="VMUI.Dialog" parent="android:Theme.Dialog">
        <item name="android:backgroundDimAmount">?attr/dialog_background_dim_amount</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item><!-- 为了避免在有 NavigationBar 的手机上 Dialog 从 NavigationBar 底部上来。去掉 Dialog 的动画，使用 View 的动画。-->
        <item name="android:layout_width">match_parent</item>
        <item name="dialog_bg">@drawable/vmui_dialog_bg</item>
        <item name="dialog_radius">@dimen/vmui_dialog_radius</item>
        <item name="dialog_margin_vertical">20dp</item>
        <item name="dialog_padding_horizontal">36dp</item>
        <item name="dialog_background_dim_amount">0.6</item>
        <item name="dialog_title_style">@style/VMUI.Dialog.Title</item>
        <item name="dialog_action_container_style">@style/VMUI.Dialog.ActionContainer</item>
        <item name="dialog_action_style">@style/VMUI.Dialog.Action</item>
        <item name="sheet_action_style">@style/VMUI.ActionSheet.Action</item>
        <item name="popup_action_style">@style/VMUI.Popup.Action</item>
        <item name="dialog_message_content_style">@style/VMUI.Dialog.MessageContent</item>
        <item name="dialog_edit_content_style">@style/VMUI.Dialog.EditContent</item>
    </style>

    <style name="VMUI.ActionSheet.Title">
        <item name="android:textColor">@color/tips_gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="VMUI.Dialog.Title">
        <item name="android:textColor">@color/title_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="subTitleTextSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="dialog_paddingBottomWhenNotContent">27dp</item>
    </style>

    <style name="VMUI.Dialog.ActionContainer">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="dialog_action_container_justify_content">stretch</item>
        <item name="dialog_action_height">60dp</item>
        <item name="dialog_action_space">8dp</item>
    </style>

    <style name="VMUI.Dialog.Action">
        <item name="android:textColor">@color/text_green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/main_action_color</item>
        <item name="dialog_action_button_padding_horizontal">12dp</item>
        <item name="dialog_action_icon_space">6dp</item>
        <item name="dialog_common_action_background">@color/white</item>
        <item name="dialog_positive_action_text_color">@color/text_green</item>
        <item name="dialog_negative_action_text_color">@color/tips_gray</item>
        <item name="dialog_danger_action_text_color">@color/danger_red</item>
        <item name="dialog_common_action_text_color">@color/title_gray</item>
    </style>

    <style name="VMUI.ActionSheet.Action">
        <item name="android:textColor">@color/danger_red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:shadowColor">@color/divider_gray</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="dialog_common_action_background">@color/white</item>
        <item name="dialog_positive_action_text_color">@color/text_green</item>
        <item name="dialog_negative_action_text_color">@color/tips_gray</item>
        <item name="dialog_danger_action_text_color">@color/danger_red</item>
        <item name="dialog_common_action_text_color">@color/title_gray</item>
    </style>

    <style name="VMUI.Popup.Action">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VMUI.Dialog.MessageContent">
        <item name="android:textColor">@color/content_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">?attr/dialog_padding_horizontal</item>
        <item name="android:paddingRight">?attr/dialog_padding_horizontal</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="dialog_paddingTopWhenNotTitle">27dp</item>
    </style>

    <style name="VMUI.Dialog.EditContent" parent="VMUI.Dialog.MessageContent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/title_gray</item>
        <item name="android:textColorHint">@color/tips_gray_light</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:paddingTop">13dp</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <style name="CustomListViewTheme" parent="@android:style/Widget.ListView">
        <item name="android:solidColor">#ffffff00</item>
        <item name="android:shadowColor">#ffeeeeee</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
    </style>

    <style name="noticebar_dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/notice_bg_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">31dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="noticebar_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/notice_bg_light</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/notice_text_light</item>
        <item name="android:minHeight">31dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="VToastDialogStyle"  parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
