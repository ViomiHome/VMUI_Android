<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="VButton">
        <attr name="button_style" format="enum">
            <enum name="black_stroke" value="0" />
            <enum name="black_fill" value="1" />
            <enum name="green_stroke" value="2" />
            <enum name="green_fill" value="3" />
            <enum name="red_stroke" value="4" />
            <enum name="red_fill" value="5" />
        </attr>
        <attr name="text_content" format="string" />
        <attr name="text_sub" format="string" />
        <attr name="drawable_right" format="reference" />
        <attr name="isloading" format="boolean" />
        <attr name="drawablepadding" format="dimension" />
        <attr name="textpadding" format="dimension" />
        <attr name="loading_duration" format="integer" />
        <attr name="text_size" format="dimension" />
        <attr name="subtext_size" format="dimension" />
    </declare-styleable>
    <declare-styleable name="VTitle">
        <attr name="title_style" format="enum">
            <enum name="light" value="0" />
            <enum name="dark" value="1" />
        </attr>
        <attr name="text_title" format="string" />
        <attr name="text_subtitle" format="string" />
        <attr name="text_back" format="string" />
        <attr name="text_right" format="string" />
        <attr name="title_drawable_right" format="reference" />
        <attr name="title_drawable_back" format="reference" />
        <attr name="title_drawable_share" format="reference" />
        <attr name="title_size" format="dimension" />
        <attr name="title_subtext_size" format="dimension" />
        <attr name="enable_right" format="boolean" />
        <attr name="enable_share" format="boolean" />
        <attr name="enable_back" format="boolean" />
    </declare-styleable>
    <declare-styleable name="VTabSegment">
        <attr name="seg_selected_color" format="color" />
        <attr name="seg_normal_color" format="color" />
        <attr name="seg_has_indicator" format="boolean" />
        <attr name="seg_indicator_top" format="boolean" />
        <attr name="seg_indicator_right" format="boolean" />
        <attr name="seg_indicator_width" format="dimension" />
        <attr name="seg_indicator_height" format="dimension" />
        <attr name="seg_selected_textsize" format="dimension" />
        <attr name="seg_normal_textsize" format="dimension" />
        <attr name="seg_itemspace_inscroll" format="dimension" />
        <attr name="seg_tab_icon_position" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="seg_mode" format="enum">
            <enum name="scrollable" value="0" />
            <enum name="fixed" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="VSearchBar">
        <attr name="search_cancel_text" format="string" />
        <attr name="search_cancel_color" format="color" />
        <attr name="search_cancel_textsize" format="dimension" />
        <attr name="search_text_color" format="color" />
        <attr name="search_textsize" format="dimension" />
        <attr name="search_hint" format="string" />
        <attr name="search_hint_color" format="color" />
        <attr name="search_textcursor_drawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="VCircleProgress">
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="barColor" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="rimWidth" format="dimension" />
        <attr name="spinSpeed" format="dimension" />
        <attr name="delayMillis" format="integer" />
        <attr name="circleColor" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="barWidth" format="dimension" />
        <attr name="barLength" format="dimension" />
        <attr name="unitTextSize" format="dimension" />
    </declare-styleable>
    <declare-styleable name="VEmptyPage">
        <attr name="empty_loading" format="boolean" />
        <attr name="empty_process" format="integer" />
        <attr name="empty_img" format="reference" />
        <attr name="empty_title" format="string" />
        <attr name="empty_title_textcolor" format="color" />
        <attr name="empty_title_textsize" format="dimension" />
        <attr name="empty_subtitle" format="string" />
        <attr name="empty_subtitle_textcolor" format="color" />
        <attr name="empty_subtitle_textsize" format="dimension" />
        <attr name="empty_button" format="string" />
    </declare-styleable>
    <declare-styleable name="VItemView">
        <attr name="item_style" format="enum">
            <enum name="normal" value="0" />
            <enum name="small_icon_left" value="1" />
            <enum name="small_icon_right" value="2" />
            <enum name="middle_icon_left" value="3" />
            <enum name="middle_icon_right" value="4" />
            <enum name="big_icon_left" value="5" />
            <enum name="big_icon_right" value="6" />
            <enum name="select" value="7" />
            <enum name="radio_check" value="8" />
            <enum name="switch_style" value="9" />
            <enum name="button" value="10" />
            <enum name="row_title" value="11" />
        </attr>
        <attr name="item_lefttitle_textsize" format="dimension" />
        <attr name="item_righttitle_textsize" format="dimension" />
        <attr name="item_subrighttitle_textsize" format="dimension" />
        <attr name="item_sublefttitle_textsize" format="dimension" />
        <attr name="item_lefttitle_textcolor" format="color" />
        <attr name="item_righttitle_textcolor" format="color" />
        <attr name="item_subrighttitle_textcolor" format="color" />
        <attr name="item_sublefttitle_textcolor" format="color" />
        <attr name="item_lefttitle" format="string" />
        <attr name="item_righttitle" format="string" />
        <attr name="item_subrighttitle" format="string" />
        <attr name="item_sublefttitle" format="string" />
        <attr name="item_button" format="string" />
        <attr name="item_text_redot" format="boolean" />
        <attr name="item_img_redot" format="boolean" />
        <attr name="item_src" format="reference" />
        <attr name="item_select" format="boolean" />
        <attr name="item_check" format="boolean" />
        <attr name="item_switch_check" format="boolean" />
        <attr name="item_arrow" format="boolean" />
    </declare-styleable>

</resources>