<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <size android:width="24dp" android:height="24dp" />
            <corners android:radius="12dp" />
            <solid android:color="#FF28BECA" />
        </shape>
    </item>
    <item android:state_checked="true" android:state_enabled="false">
        <shape android:shape="rectangle">
            <size android:width="24dp" android:height="24dp" />
            <corners android:radius="12dp" />
            <solid android:color="#7f28BECA" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_enabled="false">
        <shape android:shape="rectangle">
            <size android:width="24dp" android:height="24dp" />
            <corners android:radius="12dp" />
            <solid android:color="#7feeeeee" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <size android:width="24dp" android:height="24dp" />
            <corners android:radius="12dp" />
            <solid android:color="#eeeeee" />
        </shape>
    </item>
</selector>